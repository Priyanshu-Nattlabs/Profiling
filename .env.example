# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/profiling_db
MONGODB_DATABASE=profiling_db
MONGO_INITDB_DATABASE=profiling_db

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret Key
# Generate a secure random 256-bit (32-byte) hex string for production
# Example: openssl rand -hex 32
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-long

# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Frontend URL Configuration
FRONTEND_URL=http://localhost:4000

# Frontend Build Configuration
VITE_API_BASE_URL=http://localhost:9090

# Admin Credentials
# Set secure credentials for admin access
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-secure-password
ADMIN_NAME=Admin
