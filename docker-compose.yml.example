services:
  # MongoDB Service
  mongodb:
    image: mongo:7
    container_name: profiling-mongodb
    ports:
      - "57017:27017"
    environment:
      MONGO_INITDB_DATABASE: profiling_db
    volumes:
      - mongodb_data:/data/db
      - ./mongo-init.js:/docker-entrypoint-initdb.d/mongo-init.js:ro
    networks:
      - profiling-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  # Backend Service (Spring Boot)
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: profiling-backend
    ports:
      - "9090:9090"
    env_file:
      - .env
    environment:
      MONGODB_URI: mongodb://mongodb:27017/profiling_db
      MONGODB_DATABASE: profiling_db
      FRONTEND_URL: http://localhost:4000
      SPRING_PROFILES_ACTIVE: docker
    volumes:
      - backend_uploads:/app/uploads
    depends_on:
      mongodb:
        condition: service_healthy
    networks:
      - profiling-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "nc -z localhost 9090 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

  # Frontend Service (React + Nginx)
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
      args:
        VITE_API_BASE_URL: http://localhost:9090
    container_name: profiling-frontend
    ports:
      - "4000:4000"
    depends_on:
      backend:
        condition: service_healthy
    networks:
      - profiling-network
    restart: unless-stopped

volumes:
  mongodb_data:
  backend_uploads:

networks:
  profiling-network:
    driver: bridge
